/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.thisCityName {
  display: inline-block;
  border: 1rpx solid #2a579a;
  border-radius: 8rpx;
  padding: 10rpx 10rpx;
  font-size: 30rpx;
  color: #2a579a;
  text-align: center;
  min-width: 149.5rpx;
  margin: 16rpx;
}

.weatherwrap{
  height: 100%;
  display:flex;
  flex-direction:column;
  box-sizing:border-box;
  padding:15rpx 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  color:  #666;
  font-size:15px;
  background-color:#f5f5f5;
}
/*当天天气信息*/
.info{
  margin-top:20rpx;
  margin-bottom:20rpx;
  width:100%;
}

/*城市名称*/
.city{
  margin: 20rpx;
  border-bottom:1px solid #2a579a;
}

/*当天温度*/
.temp{
  font-size: 100rpx;
  line-height: 130rpx;
  text-align: center;
  padding-top:20rpx;
  color:#2a579a;
}

/*其他描述*/
.weather{
  line-height: 22px;
  margin: 20rpx;
  padding: 0 10px;
  display: flex;
  flex-direction: row;
  justify-content:space-around;
}